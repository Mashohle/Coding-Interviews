   public boolean matrixSearch(int item, int[][] matrix) {
      // it will always be false before search or after search and no match was found
      boolean answer = false;
      
      for (int i = 0; i < matrix.length ; i++) {
         for (int j = 0; j < matrix[i].length ; j++) {
            if (matrix[i][j] == item) { 
               answer = true;
               return answer;
            }      
         }
      }
      
      return answer;
   }
